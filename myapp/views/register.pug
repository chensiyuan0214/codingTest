extends layout

block content
    h1 Register
    form(method='POST', action='/users/register')
        #form-group
            label Name:
            input.form-control(name='title', type='text')
        #form-group
            label Email:
            input.form_control(name='author', type = 'test')
        #form-group
            label Username:
            input.form_control(name='username', type='text')
        #form-group
            label Password:
            input.form_control(name='password', type='password')

        #form-group
            label Confirm:
            input.form_control(name='password2', type='password')
        input.btn.btn-primary(type='submit', value= 'Submit')